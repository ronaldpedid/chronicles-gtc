<section class="flex flex-flow-no-wr center center-text">
    <h1>Record all Vanguard SP and Weiss Schwarz Cards sold in the store</h1>
    {{#each report as |report|}}
        <div class="comment-style margin-twenty">
            {{#with report}}
                <a href="{{id}}">
                    <h4>{{ cardName }}</h4>
                    <h4>{{ game }}</h4>
                    <h4>{{ name }}</h4>
                    <h4>{{ date }}</h4>
                    <h5>$:{{price}}</h5>
                </a>
            {{/with}}
        </div>
    {{/each}}
</section>